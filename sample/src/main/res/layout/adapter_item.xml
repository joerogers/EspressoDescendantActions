<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dataItem"
            type="com.example.espresso.contrib.model.DataItem"/>

        <variable
            name="listener"
            type="com.example.espresso.contrib.adapter.MainAdapter.ClickListener"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:selectableItemBackground"
        android:onClick="@{(view) -> listener.onItemClick(view, dataItem)}"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_account_circle_black_24dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@{dataItem.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Title"/>

        <ImageButton
            android:id="@+id/favoriteButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:contentDescription="@{dataItem.favorite ? @string/unfavorite : @string/favorite}"
            android:onClick="@{(view) -> dataItem.toggleFavorite()}"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scaleType="centerInside"
            android:src="@{dataItem.favorite ? @drawable/ic_star_black_24dp : @drawable/ic_star_border_black_24dp}"
            tools:src="@drawable/ic_star_border_black_24dp"/>
    </LinearLayout>
</layout>